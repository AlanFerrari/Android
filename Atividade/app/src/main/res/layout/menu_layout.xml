<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#028DFB"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/botao"
                android:drawableEnd="@drawable/ic_baseline_person"
                android:hint="@string/insira_o_usuario"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:padding="15dp"
                android:textColorHint="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/botao"
                android:drawableEnd="@drawable/ic_baseline_lock"
                android:hint="@string/insira_a_senha"
                android:inputType="textPassword"
                android:maxLength="50"
                android:padding="15dp"
                android:textColorHint="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/botao_redondo"
                android:text="@string/entrar"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:padding="15sp"/>

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/botao_redondo"
                android:text="@string/sair"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:padding="15sp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textColor="#fff"
                android:onClick="sairSistema" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>