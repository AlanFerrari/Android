<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastro_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fundo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:drawableRight="@drawable/ic_baseline_account_circle"
            android:textSize="20sp"
            android:textColorHint="#fff"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:paddingRight="5dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/borda"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_baseline_vpn_key"
            android:textSize="20sp"
            android:textColorHint="#fff"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:paddingRight="5dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/borda"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:drawableRight="@drawable/ic_baseline_email"
            android:textSize="20sp"
            android:textColorHint="#fff"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:paddingRight="5dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/borda"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/borda"
            android:drawableRight="@drawable/ic_baseline_phone_android"
            android:hint="Phone"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColorHint="#fff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_stop"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow Term & Conditions"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="#fff"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:background="@drawable/botao_redondo"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Already have an account?"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="147dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="#fff"
                    android:layout_marginLeft="240dp"
                    android:textSize="19sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"
                android:drawableRight="@drawable/ic_baseline_play_circle_outline"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>